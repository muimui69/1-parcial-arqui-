<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".controlador.CEditarEjercicioFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Ejercicio"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/et_nombre_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Ejercicio"
        android:inputType="text"
        android:text=""/>

    <EditText
        android:id="@+id/et_duracion_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DuraciÃ³n"
        android:inputType="text"
        android:text=""/>

    <EditText
        android:id="@+id/et_repeticion_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repeticiones"
        android:inputType="text"
        android:text=""/>

    <TextView
        android:id="@+id/tv_imagen_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No se ha seleccionado archivo multimedia"
        android:text="Archivo Actual: " />

    <Button
        android:id="@+id/btn_seleccionar_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Imagen" />

    <Button
        android:id="@+id/btn_editar_ejercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Ejercicio"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

</LinearLayout>
